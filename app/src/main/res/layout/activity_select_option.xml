<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg">

    <Button
        android:id="@+id/backBttn"
        android:layout_width="52dp"
        android:layout_height="59dp"
        android:background="@drawable/back_topic1_1_asset"
        android:tint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"/>

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Clasifica los animales"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <ImageView
        android:id="@+id/illustration"
        app:layout_constraintTop_toBottomOf="@id/instruction"
        app:layout_constraintBottom_toTopOf="@id/feedBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitCenter"

        >
    </ImageView>


    <TextView
        android:id="@+id/feedBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instruction"
    />

    <ImageButton
        android:id="@+id/op1"
        app:layout_constraintTop_toBottomOf="@id/feedBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/op2"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:scaleType="fitCenter"

        >
    </ImageButton>
    <ImageButton
        android:id="@+id/op2"
        app:layout_constraintTop_toBottomOf="@id/feedBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/op1"
        app:layout_constraintEnd_toStartOf="@id/op3"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:scaleType="fitCenter"

        >
    </ImageButton>
    <ImageButton
        android:id="@+id/op3"
        app:layout_constraintTop_toBottomOf="@id/feedBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/op2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:scaleType="fitCenter"

        >
    </ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>

